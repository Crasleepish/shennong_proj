{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Debug run.py",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "env": {
          "PYTHONPATH": "${workspaceFolder}",
          "FLASK_ENV": "development"
        },
        "justMyCode": false
      },
      {
        "name": "Python: Debug Tests",
        "type": "debugpy",
        "request": "launch",
        "purpose": ["debug-test"],
        "console": "integratedTerminal",
        "justMyCode": false
      }
    ]
  }
  