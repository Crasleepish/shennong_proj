{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Debug run.py",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "env": {
          "PYTHONPATH": "${workspaceFolder}",
          "FLASK_ENV": "development"
        },
        "justMyCode": false
      },
      {
        "name": "Python: Debug Tests",
        "type": "debugpy",
        "request": "launch",
        "purpose": ["debug-test"],
        "console": "integratedTerminal",
        "justMyCode": false
      },
      {
        "name": "Debug plot_fund_fit (script)",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/scripts/plot_fund_fit.py",
        "args": ["013275.OF", "--start", "2024-01-01", "--end", "2025-08-01", "--out", "plot_013275.png"],
        "justMyCode": false,
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal"
      }
    ]
  }
  